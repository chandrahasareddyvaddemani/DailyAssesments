package com.training;

public class main{
	
	public static void main(String[] args) {
	      int year =1996;
	      boolean leap = false;
//	      if the year divided by 4
	  if (year%4==0) {
		  if (year % 100== 0) {
			  if (year % 400 == 0)
				  
	  
		  leap =true;
	  else
		  leap = false;
	}
	else
		leap = true;
}
else
	leap = false;
if (leap)
	system.out.println(year + " is a leap year.");
else
	system.out.println(year + " is not a leap year.");
	}


}

